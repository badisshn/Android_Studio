<!-- res/layout/activity_result.xml -->

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="16dp"
    tools:context=".ResultActivity">

    <TextView
        android:id="@+id/resultTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="RÃ©sultat"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/playerNameResultTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/resultTitleTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Nom de l'utilisateur"
        android:textColor="#000000"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/scoreResultTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/playerNameResultTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Score: 0"
        android:textColor="#000000"
        android:textSize="18sp" />

    <Button
        android:id="@+id/returnButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/scoreResultTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="#87CEEB"
        android:text="Start Over"
        android:textColor="#1B5E20" />

</RelativeLayout>
